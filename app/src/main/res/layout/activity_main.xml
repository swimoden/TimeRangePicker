<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <com.mo.svg.timerange.TimeRangePicker
        android:id="@+id/timePicker"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:labelColor="#C81919"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:sleepLayoutId="@layout/layout_picker_sleep"
        app:wakeLayoutId="@layout/layout_picker_wake"
        app:nightLayoutId="@drawable/ic_night"
        app:morningLayoutId="@drawable/ic_sun"
        app:fixedBedTime = "false"
        app:startAngle = "sixAm"
        app:endAngle = "sevenPm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>